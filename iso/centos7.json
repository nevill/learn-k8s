{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "setup.sh"
      ]
    }
  ],
  "builders": [
    {
      "name": "centos7-with-guest-additions",
      "type": "virtualbox-iso",
      "http_directory": "http_server",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.ks<enter><wait>"
      ],
      "headless": true,
      "boot_wait": "10s",
      "disk_size": 10240,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "guest_os_type": "RedHat_64",
      "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "packer_cache/CentOS-7-x86_64-Minimal-1810.iso",
        "http://isoredirect.centos.org/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso"
        "http://mirrors.163.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso"
      ],
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo /sbin/halt -h -p",
      "memory": "1024",
      "cpus": 2
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-centos7.box",
        "type": "vagrant"
      }
    ]
  ]
}
